# Railway Exporter Configuration
# Copy this file to config.yaml and fill in your values

# Railway API credentials (required)
railway_api_url: https://backboard.railway.app/graphql/v2
railway_project_id: your-project-id
railway_api_token: your-api-token

project_name: string

# Plan: hobby or pro
railway_plan: pro

# Scrape interval in seconds
scrape_interval: 300

# Server port
port: 9090

# Service groups for organizing services
# Map group names to lists of service name patterns
service_groups:
  monitoring:
    - prometheus
    - grafana
    - victoria-metrics
  database:
    - postgres
    - redis
  messaging:
    - rabbitmq
  network:
    - tailscale

cors_enabled: true
websocket_enabled: true

# Gzip compression settings
gzip:
  enabled: true      # Enable gzip compression for HTTP responses
  min_size: 256      # Minimum response size in bytes to compress
  level: 5           # Compression level: 1 (fast) to 9 (best)

# Icon cache settings (LRU cache, stores raw bytes)
icon_cache:
  enabled: true      # Enable icon caching
  max_count: 200     # Max icons to cache (LRU eviction)
  # TODO: not implemented yet
  # max_bytes: 0     # Max cache size in bytes (0 = unlimited)
  # ttl_seconds: 0   # Icon TTL (0 = no expiry)

pricing:
  - name: hobby
    price:
      cpu: float
      memory: float
      disk: float
      network:
        tx: float
        rx: float
  - name: pro
    price:
      cpu: float
      memory: float
      disk: float
      network:
        tx: float
        rx: float