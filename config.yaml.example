# Railway Exporter Configuration
# Copy this file to config.yaml and fill in your values

# Railway API credentials (required)
railway_api_url: https://backboard.railway.app/graphql/v2
railway_project_id: your-project-id
railway_api_token: your-api-token

project_name: string

# Plan: hobby or pro
railway_plan: pro

# Scrape interval in seconds
scrape_interval: 300

# Server port
port: 9090

# Service groups for organizing services
# Map group names to lists of service name patterns
service_groups:
  monitoring:
    - prometheus
    - grafana
    - victoria-metrics
  database:
    - postgres
    - redis
  messaging:
    - rabbitmq
  network:
    - tailscale

cors_enabled: true
websocket_enabled: true

pricing:
  - name: hobby
    price:
      cpu: float
      memory: float
      disk: float
      network:
        tx: float
        rx: float
  - name: pro
    price:
      cpu: float
      memory: float
      disk: float
      network:
        tx: float
        rx: float