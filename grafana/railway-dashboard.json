  "refresh": "1m",
  "schemaVersion": 39,
  "templating": {
    "list": [
      {
        "hide": 0,
        "name": "datasource",
        "query": "prometheus",
        "type": "datasource"
      },
      {
        "allValue": ".*",
        "datasource": {
          "type": "prometheus",
          "uid": "${datasource}"
        },
        "includeAll": true,
        "name": "project",
        "query": "label_values(railway_current_usage_usd, project)",
        "refresh": 2,
        "type": "query"
      },
      {
        "current": {
          "text": "No",
          "value": "^[a-z]"
        },
        "label": "Show Deleted",
        "name": "show_deleted",
        "options": [
          {
            "selected": true,
            "text": "No",
            "value": "^[a-z]"
          },
          {
            "text": "Yes",
            "value": ".*"
          }
        ],
        "query": "No : ^[a-z],Yes : .*",
        "type": "custom"
      },
      {
        "allValue": ".*",
        "datasource": {
          "type": "prometheus",
          "uid": "${datasource}"
        },
        "includeAll": true,
        "multi": true,
        "name": "service",
        "query": "label_values(railway_service_cost_usd, service)",
        "refresh": 2,
        "regex": "${show_deleted}",
        "type": "query"
      }
    ]
  },
  "title": "Railway Costs",
