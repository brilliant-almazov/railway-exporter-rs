{
  "editable": true,
  "graphTooltip": 1,
  "id": null,
  "panels": [
    {
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 },
      "id": 1,
      "title": "ðŸ’° Costs",
      "type": "row"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "description": "Month to date spending",
      "fieldConfig": {
        "defaults": {
          "thresholds": { "mode": "absolute", "steps": [{ "color": "green", "value": null }] },
          "unit": "currencyUSD",
          "decimals": 2
        }
      },
      "gridPos": { "h": 4, "w": 4, "x": 0, "y": 1 },
      "id": 10,
      "options": { "colorMode": "value", "graphMode": "none", "textMode": "value" },
      "targets": [{ "expr": "railway_current_usage_usd{project=~\"$project\"}", "legendFormat": " " }],
      "title": "Spent",
      "type": "stat"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "description": "Projected monthly total",
      "fieldConfig": {
        "defaults": {
          "thresholds": { "mode": "absolute", "steps": [{ "color": "yellow", "value": null }] },
          "unit": "currencyUSD",
          "decimals": 3
        }
      },
      "gridPos": { "h": 4, "w": 4, "x": 4, "y": 1 },
      "id": 11,
      "options": { "colorMode": "value", "graphMode": "none", "textMode": "value" },
      "targets": [{ "expr": "railway_estimated_monthly_usd{project=~\"$project\"}", "legendFormat": " " }],
      "title": "Forecast",
      "type": "stat"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "description": "Average daily cost",
      "fieldConfig": { "defaults": { "unit": "currencyUSD", "decimals": 3 } },
      "gridPos": { "h": 4, "w": 4, "x": 8, "y": 1 },
      "id": 12,
      "options": { "colorMode": "none", "graphMode": "none", "textMode": "value" },
      "targets": [{ "expr": "railway_daily_average_usd{project=~\"$project\"}", "legendFormat": " " }],
      "title": "Per Day",
      "type": "stat"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "description": "Active services count",
      "fieldConfig": {
        "defaults": {
          "thresholds": { "mode": "absolute", "steps": [{ "color": "blue", "value": null }] },
          "decimals": 0
        }
      },
      "gridPos": { "h": 4, "w": 2, "x": 12, "y": 1 },
      "id": 54,
      "options": { "colorMode": "value", "graphMode": "none", "textMode": "value" },
      "targets": [{ "expr": "count(railway_service_cost_usd{project=~\"$project\", service!~\"^[0-9a-f]{8}-.*\"})", "legendFormat": " " }],
      "title": "Services",
      "type": "stat"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "fieldConfig": { "defaults": { "decimals": 0 } },
      "gridPos": { "h": 2, "w": 3, "x": 14, "y": 1 },
      "id": 13,
      "options": { "colorMode": "none", "graphMode": "none", "textMode": "value", "justifyMode": "center" },
      "targets": [{ "expr": "railway_days_in_billing_period{project=~\"$project\"}", "legendFormat": " " }],
      "title": "Day",
      "type": "stat"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "fieldConfig": { "defaults": { "decimals": 0 } },
      "gridPos": { "h": 2, "w": 3, "x": 14, "y": 3 },
      "id": 14,
      "options": { "colorMode": "none", "graphMode": "none", "textMode": "value", "justifyMode": "center" },
      "targets": [{ "expr": "railway_days_in_billing_period{project=~\"$project\"} + railway_days_remaining_in_month{project=~\"$project\"}", "legendFormat": " " }],
      "title": "Total",
      "type": "stat"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "description": "Average vCPU",
      "fieldConfig": { "defaults": { "decimals": 2, "thresholds": { "mode": "absolute", "steps": [{ "color": "blue", "value": null }] } } },
      "gridPos": { "h": 2, "w": 2, "x": 17, "y": 1 },
      "id": 50,
      "options": { "colorMode": "value", "graphMode": "none", "textMode": "value", "justifyMode": "center" },
      "targets": [{ "expr": "sum(railway_cpu_usage_vcpu_minutes{project=~\"$project\"}) / scalar(railway_days_in_billing_period{project=~\"$project\"} * 24 * 60)", "legendFormat": " " }],
      "title": "vCPU",
      "type": "stat"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "description": "Average RAM GB",
      "fieldConfig": { "defaults": { "decimals": 2, "thresholds": { "mode": "absolute", "steps": [{ "color": "purple", "value": null }] } } },
      "gridPos": { "h": 2, "w": 2, "x": 17, "y": 3 },
      "id": 51,
      "options": { "colorMode": "value", "graphMode": "none", "textMode": "value", "justifyMode": "center" },
      "targets": [{ "expr": "sum(railway_memory_usage_gb_minutes{project=~\"$project\"}) / scalar(railway_days_in_billing_period{project=~\"$project\"} * 24 * 60)", "legendFormat": " " }],
      "title": "RAM",
      "type": "stat"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "description": "Average Disk GB",
      "fieldConfig": { "defaults": { "decimals": 1, "unit": "decgbytes", "thresholds": { "mode": "absolute", "steps": [{ "color": "orange", "value": null }] } } },
      "gridPos": { "h": 2, "w": 2, "x": 19, "y": 1 },
      "id": 52,
      "options": { "colorMode": "value", "graphMode": "none", "textMode": "value" },
      "targets": [{ "expr": "sum(railway_disk_usage_gb_minutes{project=~\"$project\"}) / scalar(railway_days_in_billing_period{project=~\"$project\"} * 24 * 60)", "legendFormat": " " }],
      "title": "Disk",
      "type": "stat"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "description": "Network TX",
      "fieldConfig": { "defaults": { "decimals": 2, "unit": "decgbytes", "thresholds": { "mode": "absolute", "steps": [{ "color": "green", "value": null }] } } },
      "gridPos": { "h": 2, "w": 2, "x": 19, "y": 3 },
      "id": 53,
      "options": { "colorMode": "value", "graphMode": "none", "textMode": "value" },
      "targets": [{ "expr": "sum(railway_network_tx_gb{project=~\"$project\"})", "legendFormat": " " }],
      "title": "Net TX",
      "type": "stat"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "description": "Number of deleted services",
      "fieldConfig": { "defaults": { "decimals": 0, "thresholds": { "mode": "absolute", "steps": [{ "color": "dark-red", "value": null }] } } },
      "gridPos": { "h": 2, "w": 3, "x": 21, "y": 1 },
      "id": 16,
      "options": { "colorMode": "value", "graphMode": "none", "textMode": "value" },
      "targets": [{ "expr": "count(railway_service_cost_usd{project=~\"$project\", service=~\"^[0-9a-f]{8}-.*\"}) or vector(0)", "legendFormat": " " }],
      "title": "Deleted #",
      "type": "stat"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "description": "Cost of deleted services",
      "fieldConfig": { "defaults": { "decimals": 2, "unit": "currencyUSD", "thresholds": { "mode": "absolute", "steps": [{ "color": "dark-red", "value": null }] } } },
      "gridPos": { "h": 2, "w": 3, "x": 21, "y": 3 },
      "id": 15,
      "options": { "colorMode": "value", "graphMode": "none", "textMode": "value" },
      "targets": [{ "expr": "sum(railway_service_cost_usd{project=~\"$project\", service=~\"^[0-9a-f]{8}-.*\"}) or vector(0)", "legendFormat": " " }],
      "title": "Deleted $",
      "type": "stat"
    },
    {
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 5 },
      "id": 2,
      "title": "ðŸ“Š By Service (Avg Resources)",
      "type": "row"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "description": "Average vCPU per service",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "thresholds": {
            "mode": "absolute",
            "steps": [{ "color": "blue", "value": null }]
          },
          "decimals": 2
        }
      },
      "gridPos": { "h": 8, "w": 6, "x": 0, "y": 6 },
      "id": 70,
      "options": { "displayMode": "basic", "orientation": "horizontal" },
      "targets": [{
        "expr": "railway_cpu_usage_vcpu_minutes{project=~\"$project\", service!~\"${hide_deleted}\"} / ignoring(service) group_left() (railway_days_in_billing_period{project=~\"$project\"} * 24 * 60)",
        "legendFormat": "{{icon}} {{service}}"
      }],
      "title": "CPU (vCPU)",
      "transformations": [{ "id": "sortBy", "options": { "sort": [{ "field": "Value", "desc": true }] } }],
      "type": "bargauge"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "description": "Average memory per service",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "thresholds": {
            "mode": "absolute",
            "steps": [{ "color": "purple", "value": null }]
          },
          "decimals": 2,
          "unit": "decgbytes"
        }
      },
      "gridPos": { "h": 8, "w": 6, "x": 6, "y": 6 },
      "id": 71,
      "options": { "displayMode": "basic", "orientation": "horizontal" },
      "targets": [{
        "expr": "railway_memory_usage_gb_minutes{project=~\"$project\", service!~\"${hide_deleted}\"} / ignoring(service) group_left() (railway_days_in_billing_period{project=~\"$project\"} * 24 * 60)",
        "legendFormat": "{{icon}} {{service}}"
      }],
      "title": "Memory (GB)",
      "transformations": [{ "id": "sortBy", "options": { "sort": [{ "field": "Value", "desc": true }] } }],
      "type": "bargauge"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "description": "Average disk per service",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "thresholds": {
            "mode": "absolute",
            "steps": [{ "color": "orange", "value": null }]
          },
          "decimals": 1,
          "unit": "decgbytes"
        }
      },
      "gridPos": { "h": 8, "w": 6, "x": 12, "y": 6 },
      "id": 72,
      "options": { "displayMode": "basic", "orientation": "horizontal" },
      "targets": [{
        "expr": "railway_disk_usage_gb_minutes{project=~\"$project\", service!~\"${hide_deleted}\"} / ignoring(service) group_left() (railway_days_in_billing_period{project=~\"$project\"} * 24 * 60)",
        "legendFormat": "{{icon}} {{service}}"
      }],
      "title": "Disk (GB)",
      "transformations": [{ "id": "sortBy", "options": { "sort": [{ "field": "Value", "desc": true }] } }],
      "type": "bargauge"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "description": "Network egress per service",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "thresholds": {
            "mode": "absolute",
            "steps": [{ "color": "green", "value": null }]
          },
          "decimals": 2,
          "unit": "decgbytes"
        }
      },
      "gridPos": { "h": 8, "w": 6, "x": 18, "y": 6 },
      "id": 73,
      "options": { "displayMode": "basic", "orientation": "horizontal" },
      "targets": [{
        "expr": "railway_network_tx_gb{project=~\"$project\", service!~\"${hide_deleted}\"}",
        "legendFormat": "{{icon}} {{service}}"
      }],
      "title": "Network (GB)",
      "transformations": [{ "id": "sortBy", "options": { "sort": [{ "field": "Value", "desc": true }] } }],
      "type": "bargauge"
    },
    {
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 14 },
      "id": 3,
      "title": "ðŸ’µ By Service ($)",
      "type": "row"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "description": "Current cost per service",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "thresholds": {
            "mode": "absolute",
            "steps": [{ "color": "green", "value": null }]
          },
          "unit": "currencyUSD"
        }
      },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 15 },
      "id": 20,
      "options": {
        "displayMode": "gradient",
        "orientation": "horizontal",
        "showUnfilled": true
      },
      "targets": [{
        "expr": "railway_service_cost_usd{project=~\"$project\", service!~\"${hide_deleted}\"}",
        "legendFormat": "{{icon}} {{service}}"
      }],
      "title": "Cost by Service",
      "transformations": [{ "id": "sortBy", "options": { "sort": [{ "field": "Value", "desc": true }] } }],
      "type": "bargauge"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "description": "Projected monthly cost per service",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "thresholds": {
            "mode": "absolute",
            "steps": [{ "color": "green", "value": null }]
          },
          "unit": "currencyUSD"
        }
      },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 15 },
      "id": 21,
      "options": {
        "displayMode": "gradient",
        "orientation": "horizontal",
        "showUnfilled": true
      },
      "targets": [{
        "expr": "railway_service_estimated_monthly_usd{project=~\"$project\", service!~\"${hide_deleted}\"}",
        "legendFormat": "{{icon}} {{service}}"
      }],
      "title": "Forecast by Service",
      "transformations": [{ "id": "sortBy", "options": { "sort": [{ "field": "Value", "desc": true }] } }],
      "type": "bargauge"
    },
    {
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 23 },
      "id": 4,
      "title": "ðŸ“ˆ Trends",
      "type": "row"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "fieldConfig": {
        "defaults": {
          "custom": { "drawStyle": "line", "fillOpacity": 20, "lineWidth": 2 },
          "unit": "currencyUSD"
        }
      },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 24 },
      "id": 40,
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom" }
      },
      "targets": [
        {
          "expr": "railway_current_usage_usd{project=~\"$project\"}",
          "legendFormat": "Spent"
        },
        {
          "expr": "railway_estimated_monthly_usd{project=~\"$project\"}",
          "legendFormat": "Forecast"
        }
      ],
      "title": "Costs",
      "type": "timeseries"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "fieldConfig": {
        "defaults": {
          "custom": { "drawStyle": "line", "lineWidth": 1 },
          "unit": "currencyUSD"
        }
      },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 24 },
      "id": 41,
      "options": {
        "legend": { "calcs": ["last"], "displayMode": "table", "placement": "right", "sortBy": "Last", "sortDesc": true }
      },
      "targets": [{
        "expr": "railway_service_cost_usd{project=~\"$project\", service!~\"${hide_deleted}\"}",
        "legendFormat": "{{icon}} {{service}}"
      }],
      "title": "By Service",
      "type": "timeseries"
    }
  ],
  "refresh": "1m",
  "schemaVersion": 39,
  "templating": {
    "list": [
      {
        "hide": 0,
        "name": "datasource",
        "query": "prometheus",
        "type": "datasource"
      },
      {
        "allValue": ".*",
        "datasource": { "type": "prometheus", "uid": "${datasource}" },
        "includeAll": true,
        "name": "project",
        "query": "label_values(railway_current_usage_usd, project)",
        "refresh": 2,
        "type": "query"
      },
      {
        "current": { "text": "Yes", "value": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$" },
        "label": "Hide Deleted",
        "name": "hide_deleted",
        "options": [
          { "selected": true, "text": "Yes", "value": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$" },
          { "selected": false, "text": "No", "value": "^$" }
        ],
        "query": "Yes : ^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$,No : ^$",
        "type": "custom"
      }
    ]
  },
  "title": "Railway Costs",
  "uid": "railway-costs",
  "version": 20
}
